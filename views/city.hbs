<div class="container">
  <div class="header">
    <a href="/log-out"><h4>Log-out</h4></a>
  </div>
  <div class="main">
    <div class="vista">
      <h1>All Valley</h1>
      <img class="background-image" src="/images/city.jpg" alt="city">
    </div>
    <div class="aside">
      <div class="card">
        <h4>Debs</h4>
        <h3 id="civ-counter">{{{count}}}</h3>
        <img class="card-image" src="/images/crowd.jpg" alt="crowd">
        <form action="/city" method="POST">
          <button id="civ-recruit" class="btn btn-primary recruit" onchange="enableRecruitCivBtn(this)">recruit</button>
        </form>
        {{#if errorMessage}}
           <p>{{errorMessage}}</p>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="menu">
    <div class="card dojo">
      <a href="/main">
        <img class="card-image" src="/images/outside-dojo.jpg" alt="outside dojo">
        <h2>Back to Dojo</h2>
      </a>
    </div>
      <div class="card fight">
      <a href="/fight">
        <img class="card-image" src="/images/look-for-fight.jpg" alt="outside dojo">
        <h2>Look for a fight</h2>
      </a>
    </div>
  </div>
</div>