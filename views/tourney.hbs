<div class="container-classes">
  <h1>Tourney</h1>
  <div class="main-classes">
    <div class="list">
      {{#each trainees}}
        <div class="entry">
          <img src="{{imageUrl}}" alt="{{name}}">
          <h2>{{name}}</h2>
           <img src="/images/{{level}}.jpg" alt="{{level}}">
          <h2>💚 {{mana}}</h2>
        </div>
      {{/each}}
      <form action="/tourney" method="POST" id="battle">
        <button class="btn btn-tourney" style="{{hide}}">Start Tourney</button>
      </form>
    </div>
  </div>
  <div class="main-classes">
    <div class="result-list">
      {{#each winner}}
          <h1>{{name}} wins!</h1>
          <img src="{{imageUrl}}" alt="{{name}}">
          <h1>🏆</h1>
      {{/each}}
    </div>
  </div>
  <div class="menu">
    <div class="card classes">
      <div class="info">
      </div>
      <a href="/classes">
        <img class="card-image" src="/images/class.jpg" alt="Martial Art Class">
        <h2>Back to Classes</h2>
      </a>
    </div>
    <div class="card dojo">
      <a href="/main">
        <img class="card-image" src="/images/outside-dojo.jpg" alt="outside dojo">
        <h2>Back to Dojo</h2>
      </a>
    </div>
  </div>
</div>