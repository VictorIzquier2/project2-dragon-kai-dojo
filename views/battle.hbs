<div class="container-classes">
  <h1>choose opponents</h1>
  <form action="/battle" method="POST">
  <div class="main-classes">
    <div class="list">
      {{#each opponents}}
        <div class="entry">
          <input type="checkbox" id="{{_id}}" name="{{name}}" value="{{_id}}">
          <img src="{{imageUrl}}" alt="{{name}}">
          <label for="{{_id}}">{{name}}</label>
          <h2>💚 {{mana}}</h2>
          <h2>🛡️ {{stamina}}</h2>
        </div>
      {{/each}}
        <button class="btn btn-battle">Start Battle</button>
    </div>
  </div>
  </form>
  <div class="menu">
    <div class="card classes">
      <div class="info">
      </div>
      <a href="/classes">
        <img class="card-image" src="/images/class.jpg" alt="Martial Art Class">
        <h2>Back to Classes</h2>
      </a>
    </div>
    <div class="card dojo">
      <a href="/main">
        <img class="card-image" src="/images/outside-dojo.jpg" alt="outside dojo">
        <h2>Back to Dojo</h2>
      </a>
    </div>
  </div>
</div>>