<div class="container-classes">
  <h1 style="{{hide}}">choose 2 opponents</h1>
  <form action="/classes/battle" method="POST" id="battle">
    <div class="main-classes">
      <div class="list">
        {{#each opponents}}
          <div class="entry ranking">
            <input type="checkbox" id="{{_id}}" name="_id" value="{{_id}}" onchange="countOppSelected(this)">
            <img src="{{imageUrl}}" alt="{{name}}">
            <label for="{{_id}}">{{name}}</label>
            <img src="/images/{{level}}.jpg" alt="{{level}}">

            <h2>🏆 {{standing}}</h2>
          </div>
        {{/each}}
        <button class="btn btn-battle" onclick="enableBtn()" style="{{hide}}">Start Battle</button>
      </div>
    </div>
  </form>
  <div class="main-classes">
    <div class="result-list">
      {{#each winner}}
          <h1>{{name}} wins!</h1>
          <img src="{{imageUrl}}" alt="{{name}}">
          <h1>🏆</h1>
      {{/each}}
    </div>
  </div>
  <div class="menu">
    <div class="card classes">
      <div class="info">
      </div>
      <a href="/classes">
        <img class="card-image" src="/images/class.jpg" alt="Martial Art Class">
        <h2>Back to Classes</h2>
      </a>
    </div>
    <div class="card dojo">
      <a href="/main">
        <img class="card-image" src="/images/outside-dojo.jpg" alt="outside dojo">
        <h2>Back to Dojo</h2>
      </a>
    </div>
  </div>
</div>