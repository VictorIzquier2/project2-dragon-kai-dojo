<div class="container-classes">
  <h1 style="{{hide}}">Tourney</h1>
  <form action="/classes/tourney" method="POST" id="tourney">
    <div class="main-classes">
      <div class="list">
        {{#each opponents}}
          <div class="entry ranking">
            <input type="checkbox" id="{{_id}}" name="_id" checked value="{{_id}}" onchange="countPlayersSelected(this)">
            <img src="{{imageUrl}}" alt="{{name}}">
            <label for="{{_id}}">{{name}}</label>
            <img src="/images/{{level}}.jpg" alt="{{level}}">
            <h2>🏆 {{standing}}</h2>
          </div>
        {{/each}}
        <button class="btn btn-tourney" onclick="enableTBtn()" style="{{hide}}">Start Tourney</button>
      </div>
      <span class="warn">You need 16 disciples</span>
    </div>
  </form>
  <div class="menu">
    <div class="card classes">
      <div class="info">
      </div>
      <a href="/classes">
        <img class="card-image" src="/images/class.jpg" alt="Martial Art Class">
        <h2>Back to Classes</h2>
      </a>
    </div>
    <div class="card dojo">
      <a href="/main">
        <img class="card-image" src="/images/outside-dojo.jpg" alt="outside dojo">
        <h2>Back to Dojo</h2>
      </a>
    </div>
  </div>
</div>