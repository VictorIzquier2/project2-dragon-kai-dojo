<div class="container-fight">
  <div class="header">
    <a href="/log-out"><h4>Log-out</h4></a>
  </div>
  <h1 class="sensei-h1">Fight</h1>
  <form action="/fight" method="POST" id="fight">
  <div class="main-fight">
    <div class="list">
      {{#each player}}
      <div class="entry">
        <input class="input-player" type="checkbox" id="{{_id}}" name="_id" value="{{_id}}" onchange="countFighterSelected(this)" checked>
        <img src="{{imageUrl}}" alt="{{name}}">
        <label for="{{_id}}">{{name}}</label>
        <img src="/images/{{level}}.jpg" alt="{{level}}">
        <h2>{{standing}}</h2>
      </div>
      {{/each}}
    </div>
